<h2>Please Confirm Your Payment Details</h2>

<table>
  <tr><td>Name:</td><td><%= @address['name'] %></td></tr>
  <tr><td>Company:</td><td><%= @address['company'] %></td></tr>
  <tr><td>Address 1:</td><td><%= @address['address1'] %></td></tr>
  <tr><td>Address 2:</td><td><%= @address['address2'] %></td></tr>
  <tr><td>City:</td><td><%= @address['city'] %></td></tr>
  <tr><td>State:</td><td><%= @address['state'] %></td></tr>
  <tr><td>Country:</td><td><%= @address['country'] %></td></tr>
  <tr><td>Zip:</td><td><%= @address['zip'] %></td></tr>
  <tr><td>Number of slaves:</td><td><%= @rendersession.num_slaves %></td></tr>
  <tr><td>Run-time in hours:</td><td><%= @rendersession.run_time %></td></tr>
  <tr><td>VM machine type:</td><td>
  <% if @rendersession.vm_type == "t1.micro" %>
    Micro
  <% elsif @rendersession.vm_type == "m1.small" %>
    Small
  <% elsif @rendersession.vm_type == "m1.medium" %>
    Medium
  <% elsif @rendersession.vm_type == "m1.large" %>
    Large
  <% elsif @rendersession.vm_type == "m1.xlarge" %>
    Extra Large (RAM)
  <% elsif @rendersession.vm_type == "c1.xlarge" %>
    Extra Large (Cores)
  <% else %>
    Unknown
  <% end %>
  (<%=h @rendersession.vm_type %>)
  </td></tr>
  <tr><td>Costs in Euro:</td><td><%= @rendersession.costs %></td></tr>
</table>

<br /><br />

<%= form_tag({:action => 'complete'}) do -%>
  <%= hidden_field_tag "token", params[:token] %>
  <%= hidden_field_tag "payer_id", params[:PayerID] %>
  <%= submit_tag 'Complete Payment' %>
<% end -%>
